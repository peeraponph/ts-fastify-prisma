generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Outbox {
  id        String   @id @default(uuid())
  topic     String
  key       String
  eventType String
  payload   Json
  status    String   @default("PENDING")
  createdAt DateTime @default(now())
  sentAt    DateTime?
  error     String?

  @@index([status, createdAt])
}

